<Window x:Class="Tema3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Mosaico"
        mc:Ignorable="d"
        Title="Mosaico Samir Wawa Asnani" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Background="Red" MinHeight="100"></TextBlock>
        <TextBlock DockPanel.Dock="Right" Background="Aqua" MinWidth="100"></TextBlock>
        <TextBlock DockPanel.Dock="Left" Background="Red" MinWidth="100"></TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Background="Aqua" MinHeight="100"></TextBlock>
        
        <TextBlock DockPanel.Dock="Top" Background="#FF0004FF" MinHeight="100"></TextBlock>
        <TextBlock DockPanel.Dock="Right" Background="#FF0004FF" MinWidth="100"></TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Background="#FF807B00" MinHeight="100"></TextBlock>
        <TextBlock DockPanel.Dock="Left" Background="#FF807B00" MinWidth="100"></TextBlock>
        <TextBlock Background="Black"></TextBlock>
    </DockPanel>
</Window>
